<main>
  <div class ="container mt-5">
    <div class="row">
      <div class="col-md-3">
       <%= render 'users/userinfo', user: @user %>

       <%= render 'form', book: @book_new %>
     </div>

    <div class="col-md-8">
    <table class="table">
    <h3>Book detail</h3>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @book.user,:profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= @book.user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>

          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
          <td><%= link_to "Delete",book_path(@book.id), method: :delete,
            data: {confirm: "Are you Sure?"}, class: "btn btn-danger"%></td>
          <% end %>
        </tr>
      </tbody>
     </table>
    
      
  </div>

  </div>
  </div>
</main>









